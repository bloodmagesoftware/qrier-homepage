---
import { twMerge } from "tailwind-merge";

interface Props {
  class?: string;
}

import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html
  lang="en"
  class="bg-white dark:bg-black selection:bg-indigo-300 selection:text-indigo-900 text-neutral-700 dark:selection:bg-indigo-900 dark:selection:text-indigo-400 dark:text-neutral-400"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="The inevitable next step in the evolution of business emails" />
    <title>Qrier</title>
  </head>
  <body>
    <Nav />
    <main class={twMerge("mx-auto px-2 mt-24 max-w-5xl", Astro.props.class)}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
